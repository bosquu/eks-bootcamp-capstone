{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5"> Microservices Tester v1.0</h1>
                <hr>
                <a id="brokerBtn" class="btn btn-outline-secondary" href="javascript:void(0);">Testing Broker API </a>

                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5"> Message Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Message Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">No Message received yet !!! Loading...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        let brokerBtn = document.getElementById("brokerBtn");
        let output = document.getElementById("output");
        let sent = document.getElementById("payload");
        let received = document.getElementById("received");
        brokerBtn.addEventListener("click", function() {
            const body = {
                method: 'POST',

            }
            fetch("http:\/\/localhost:8080", body)
            .then ((response) => response.json())
            .then((data) =>{
                sent.innerHTML("The POST request is empty");
                received.innerHTML = JSON.strongify(data, undefined, 4);
                if (data.error) {
                    console.log(data.message);

                } else {
                    output.innerHTML += `<br><strong> Broker API Response</strong>: ${data.message}`;
                }
            })
            .catch((error) => {
                output.innerHTML += "<br><br> Some Error(s) have been Found: " + error;
            })
        })
    </script>
{{end}}
